# Environment Variables for Local Network Deployment
# Copy this file to .env.local and update with your actual values

# Database Configuration
DB_HOST=mysql
DB_NAME=root
DB_USER=root
DB_PASSWORD=root

# JWT
JWT_SECRET=YOUR_JWT_SECRET

# OpenAI API Key (for AI Advisor feature)
OPENAI_API_KEY=YOUR_OPENAI_KEY

# Application Settings
APP_ENV=local
APP_DEBUG=true
APP_URL=http://finsight.local

# Local Network Settings
# Update this with your laptop's actual IP address
# Find it using: ipconfig (Windows) or ifconfig (Linux/Mac)
LOCAL_IP=YOUR_IP

# Nagios Monitoring
NAGIOS_ADMIN_USER=yourpass
NAGIOS_ADMIN_PASSWORD=yourpass

# Email Alerts (Optional - for Nagios notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=your_email@gmail.com
